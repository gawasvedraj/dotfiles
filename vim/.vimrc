colorscheme slate
set number
set showmode
set wrap
set linebreak
set noshowmatch
set shortmess=I

set tabstop=8
set shiftwidth=8
set noexpandtab
set smartindent
set autoindent

set list
set listchars=tab:»\ ,extends:›,precedes:‹,nbsp:·,trail:·

syntax on
filetype on
filetype plugin on
filetype plugin indent on
